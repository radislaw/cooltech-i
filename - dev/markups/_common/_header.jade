header.header
    .header__top
        .container
            .header__left
                - var icons = ['fb', 'vk', 'tw']
                ul.socials
                    each icon in icons
                        li(class="socials__item social__item_" + icon)
                            a.social__link(href="#")
                                .socials__icon
            .header__right
                .address ул. Маяковского 6, офис 17
                a(href="tel:+79212312312").phone +7 (921) 231-23-12
    .header__bottom
        .container
            a.logo(href="#")
                img.logo__img(src="" alt="cooltech logo")
                .logo__text cooltech
            .search
                form.search__form
                    input.search__form-input(name="" type="text" placeholder="Что будем искать")
                    input.search__form-submit(name="" type="submit" value="Найти")
            .menu
                - var items = ["Карта проезда", "История заказов", "Корзина"]
                ul.menu__list
                    each item in items
                        li(class="menu__item")
                            a(href="#").menu__link= item